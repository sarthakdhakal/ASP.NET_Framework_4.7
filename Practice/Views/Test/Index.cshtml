@model IEnumerable<Practice.Models.EmployeeViewData>
@{
    ViewBag.Title = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of data</h2>
        </div>
        <div class="col-6 text-right">
            
            @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-primary"})
        </div>
    </div>
    <br><br>
    @if (Model != null)
    {
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Address
                </th>
                <th>
                    DepartmentId
                </th>
                <th>
                    DepartmentName
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @* <a href="/Test/EmployeeDetail?employeeId=@item.EmployeeId"> @item.Name</a> *@
                        @Html.ActionLink(item.Name, "EmployeeDetail", new {employeeId = item.EmployeeId})
                    </td>

                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.DepartmentId
                    </td>
                    <td>
                        @item.DepartmentName
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete" , new{item.EmployeeId}, new  {@class="btn btn-danger"})
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h2>No application type exists</h2>
    }
</div>
